{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "outDir": "build",
    "esModuleInterop": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "rootDirs": [
      "./src"
    ],
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "types/*": ["./types/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "jsx": "preserve",
  },
  "include": [
    "src",
    "./types"
  ]
}
